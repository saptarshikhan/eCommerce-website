<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order Summary</title>
    <style>
        .a1{
        background-color: rgb(69, 69, 255);
        color: white;
        height: 50px;
        font-size: 25px;
        text-align: center;

    }
    </style>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="a1">
        <p>Order Summary</p>
    </div>
    <% var price=0,quantity=0 
    data.forEach((e)=>{
      price+=parseInt(e.itemPrice)
      quantity+=e.itemQuantity
        %>
        <div class="container my-2">
        <div class="card mb-3" style="max-width: 1000px;max-height: 800px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="upload/<%=e.itemImg%>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                    
                  <h5 class="card-title"><%=e.itemName%></h5>
                  <p class="card-text"><strong>Price-<%=e.itemPrice%></strong></p>
                  <p class="card-text"><strong>Quantity-<%=e.itemQuantity%></strong></p>
                </div>
              </div>
            </div>
        </form>
          </div>
          </div>
          <%
    })
    
    %>
    <footer class="bg-dark text-center text-white">
      <!-- Grid container -->
      <div class="container p-4 pb-0">
        <!-- Section: Form -->
        <section class="">
          <form action="">
            <!--Grid row-->
            <div class="row d-flex justify-content-center">
              <!--Grid column-->
              <div class="col-auto">
                <p class="pt-2">
                  <strong>Quantity-<%=quantity%></strong>
                </p>
              </div>
              <div class="col-auto">
                <p class="pt-2">
                  <strong>Price-<i  class="fa">&#xf156;</i><%=price%></strong>
                </p>
              </div>
              <!--Grid column-->
    
    
              <!--Grid column-->
    
              <!--Grid column-->
              <div class="col-auto">
                <!-- Submit button -->
                <button type="submit" class="btn btn-outline-light mb-4">
                  Place Order
                </button>
              </div>
              <!--Grid column-->
            </div>
            <!--Grid row-->
          </form>
        </section>
        <!-- Section: Form -->
      </div>
      <!-- Copyright -->
    </footer>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>