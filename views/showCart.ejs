        <div class="card mb-3" style="max-width: 1000px;max-height: 800px;">
            <form action="cartAdd" method="post">
                <input type="hidden" name="itemName" value="<%=data[0].itemName%>">
                <input type="hidden" name="itemID" value="<%=data[0]._id%>">
                <input type="hidden" name="itemPrice" value="<%=data[0].itemPrice%>">
                <input type="hidden" name="bid" value="<%=uid%>">
                <input type="hidden" name="itemImg" value="<%=data[0].itemImg%>">
                
            <div class="row g-0">
              <div class="col-md-4">
                <img src="upload/<%=data[0].itemImg%>" class="img-fluid rounded-start" alt="...">
              </div>
